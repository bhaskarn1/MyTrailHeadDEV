<aura:event type="APPLICATION" description="Fires when the pagination has updated from the Data Table" >
    <aura:attribute name="itemsperpage" type="Integer" description="Number of records displayed per page"/>
    <aura:attribute name="page" type="Integer" description="Current page the Data Table is displaying"/>
    <aura:attribute name="highindex" type="Integer" description="Highest row index can be displayed"/>
    <aura:attribute name="lowindex" type="Integer" description="Lowest row index can be displayed"/>
</aura:event>